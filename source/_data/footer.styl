footer.footer {
  background: #333;
  color: white;

  div.footer-inner {
    text-align: right;
    padding-right: 0;
  }

  span.with-love {
    display: none;
  }

  div.powered-by {
    font-size: 0.8rem;
    color: #ddd;
  }

  a {
    border-bottom: none;
    color: white;
  }

  a:hover {
    color: #ccc;
  }
}

.back-to-top {
  display: flex;
  width: 40px;
  height: 40px;
  border-radius: 5px;
  justify-content: center;
  align-items: center;
  left: initial;
  right: 30px;

  i {
    font-size: 20px;
  }

  &:hover {
    color: #fff;
  }

  &.back-to-top-on {
    bottom: 30px;
  }
}
